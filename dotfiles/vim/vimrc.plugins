function! ToggleErrors()
  for buffer in tabpagebuflist()
    if bufname(buffer) == ''
      " then it should be the loclist window
      lclose
      return
    endif
  endfor
  lopen
endfunction
nnoremap <Leader>te :call ToggleErrors()<cr>

